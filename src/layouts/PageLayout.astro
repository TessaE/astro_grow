---
import { ViewTransitions } from 'astro:transitions';
import { fade } from 'astro:transitions';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" transition:animate={fade({ duration: '0.3s' })}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/astro_grow/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	@font-face {
		font-family: "JaneRoe";
		src: url('/astro_grow/fonts/JaneRoe-Light.ttf') format('truetype');
		font-display: swap;
	}
	@font-face {
		font-family: "JaneRoeBold";
		src: url('/astro_grow/fonts/JaneRoe-Bold.ttf') format('truetype');
		font-display: swap;
	}
	:root {
		--green-dark: #3b5041;
		--green-light: #629272;
		--green-very-light: #bad7c1;
		--purple-dark: #393756;
		--purple-light: #8d6ea1;
	}
	html {
		font-family: system-ui, sans-serif;
		color: #171a17;
		background-color: #F6F6F6;
	}
	nav, main {
		margin: auto;
		padding: 1.2rem;
		max-width: 60ch;
		container-type: inline-size;
	}
	nav {
		padding-block: 16px 4px;
	}
	h1, h4, label {
    	font-family: "JaneRoeBold";
    }
	h4, label {
		font-size: 1.2rem;
	}
	input {
		display: block;
		margin-block: 8px 12px;
		padding-inline: 8px;
		height: 40px;
		width: 100%;
	}
	input:focus-visible {
		outline-color: var(--green-light);
	}
	select {
		padding: 8px;
	}
	a {
		color: var(--purple-dark);
		word-break: break-word;
	}
	a:visited {
		color: var(--purple-light);
	}
	a:hover, a:focus-visible {
		color: var(--green-light);
	}
	a:active {
		color: var(--green-dark);
	}
	a.skip-link {
    position:absolute;
    left:-10000px;
    overflow: hidden;
	}
	a.skip-link:focus-visible{
    position:static;
  }
	div.filters {
		display: grid;
		gap: 12px;
	}
	@container (min-width: 450px) {
		div.filters {
			grid-template-columns: max-content 1fr max-content;
		}
	}
	div.filter-location {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4px;
	}
	div.filter-location button.location-active {
    background-color: var(--green-very-light);
    border-width: 1px;
  }
	ul.search-results {
		margin: 0;
		padding: 0;
	}
	li.search-result {
		list-style-type: none;
		margin-block: 20px;
		padding: 12px;
		background-color: white;
		border-radius: 4px;
	}
	li.search-result a {
		font-weight: bold;
	}
	li.search-result p {
		margin-block: 12px 4px;
	}
	img.svg-icon {
		height: 20px;
		vertical-align: text-bottom;
		margin-right: 4px;
	}
</style>
